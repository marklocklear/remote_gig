  </head>
  <div class="user-nav">
      <% if current_user %>
        <ul>
        <div class="header">
          <div class="header-left">
            <%= link_to "Home", jobs_path, method: :get  %>
            <%= link_to "My Jobs", myjobs_path, method: :get  %>
            <%= link_to "Archived Jobs", get_archived_jobs_user_jobs_path, method: :get  %>
            <%= link_to "Your Profile", edit_user_registration_path %>
           <nav class="logged-in-as">Logged in as: <%= current_user.email %></nav>
          </div>
        </div>
        </ul>
      <% end %>
  </div>
    <nav class="nav">
        <div class="burger">
            <div class="burger__patty"></div>
        </div>
        <ul class="nav__list">
            <li class="nav__item">
                <a class="nav__link c-yellow scrolly" style="font-size:24px" href="https://twitter.com/myremotegig" target="_blank" title="Twitter"><i class="fa fa-twitter"></i></a>
            </li>
            <li class="nav__item">
                <a class="nav__link c-red" style="font-size:24px" href="https://github.com/marklocklear/remote_gig" target="_blank"><i class="fa fa-github" title="Github"></i></a>
