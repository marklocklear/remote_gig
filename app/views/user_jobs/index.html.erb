<p id="notice"><%= notice %></p>

<h1>User Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Company</th>
      <th>Url</th>
      <th>Notes</th>
      <th>Applied</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_jobs.each do |user_job| %>
      <tr>
        <td><%= user_job.title %></td>
        <td><%= user_job.company %></td>
        <td><%= link_to user_job.url, user_job.url, target: "_blank" %></td>
        <td><%= user_job.notes %></td>
        <td><%= user_job.applied %></td>
        <td><%= link_to 'Show', user_job %></td>
        <td><%= link_to 'Edit', edit_user_job_path(user_job) %></td>
        <td><%= link_to 'Destroy', user_job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Job', new_user_job_path %>
